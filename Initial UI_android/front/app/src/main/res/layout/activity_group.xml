<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="yiyang.yang.front.Group"
    android:background="FFF6F6F6">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Group"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="391dp"
            android:layout_height="71dp"
            android:text="@string/Groups"
            android:id="@+id/Group"
            android:textColor="#ffffffff"
            android:textSize="@android:dimen/app_icon_size"
            android:backgroundTint="#ff5aa5ff"
            android:background="#ff3dacff" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="My Class"
            android:id="@+id/MyClass"
            android:textSize="@android:dimen/app_icon_size"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <ImageButton
        android:layout_width="380dp"
        android:layout_height="500dp"

        android:id="@+id/imageButton22"
        android:src="@drawable/groups"
        android:contentDescription="@string/MGroup"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <ImageButton
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:id="@+id/imageButton23"
        android:src="@drawable/groups"
        android:contentDescription="@string/MGroup"
        android:layout_alignTop="@+id/imageButton22"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton24"
        android:layout_marginBottom="46dp"
        android:src="@drawable/ADD"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp" />

</RelativeLayout>
