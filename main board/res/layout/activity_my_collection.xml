        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.kvitochka.viewer.MyCollection"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:id="@+id/jh">

            <ImageButton
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:id="@+id/imageButton2"
                android:visibility="invisible" />

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Chapter 2.2"

                android:layout_marginTop="10dp"
                android:layout_below="@+id/linearLayout"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:layout_marginTop="10dp"
                android:layout_marginRight="0dp" />

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chapter 2.3"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearLayout"
            />


            <VideoView

            android:id="@+id/videoView"

            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerInParent="true"

                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton9"
                    android:src="@drawable/share"
                    android:onClick="share"
                    android:background="@color/bright_foreground_material_dark" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton13"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/play"
                    android:onClick="change"
                    android:background="@color/bright_foreground_material_dark"/>

            </FrameLayout>

            <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chapter 2.4"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearLayout"
            />

        <!-- Container view to scroll horizontally which gives the carousel effect -->
    <HorizontalScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <!-- Carousel items container - lays out items horizontally -->
        <LinearLayout android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

    </HorizontalScrollView>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton11"
                    android:src="@drawable/fullscreen"
                    android:layout_gravity="right"
                    android:background="@color/bright_foreground_material_dark"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton12"
                    android:src="@drawable/share"
                    android:onClick="share"
                    android:layout_gravity="left|center_vertical"
                    android:background="@color/bright_foreground_material_dark"/>
            </FrameLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>

            <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chapter 2.2"
            android:id="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearLayout"

            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            />
